node {
    stage 'setup environment'
    deleteDir()
    env.PATH = "/usr/local/bin:${env.PATH}"    

    stage 'checkout project'
    checkout scm

    stage 'build project'
    sh '''cd tutormeets-dockers
          make build-docker-nginx'''

    stage 'push to ecr'
    sh '''`aws ecr get-login`
          cd tutormeets-dockers
          make push-nginx'''
}
