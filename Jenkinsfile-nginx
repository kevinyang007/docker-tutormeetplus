node {
  stage('setup environment') {
    deleteDir()
    env.PATH = "/usr/local/bin:${env.PATH}"    
  }

  stage('checkout project') {
    checkout scm
  }

  stage('build project') {
    sh 'make echo build-docker-nginx push-nginx'
    sh 'git tag --contains HEAD | xargs -I % sh -c "tag=% make echo build-docker-nginx push-nginx"'
  }
}
