node {
  stage('setup environment') {
    deleteDir()
    env.PATH = "/usr/local/bin:${env.PATH}"    
  }

  stage('checkout project') {
    checkout scm
  }

  stage('build project to ECR') {
    sh 'make echo build-docker-nginx push-nginx'
    sh 'git tag --contains HEAD | xargs -I % sh -c "tag=% make echo build-docker-nginx push-nginx"'
  }

  stage('build project to Docker-CN.tutormeet.plus') {
    sh 'registry=docker-cn.tutormeet.plus make echo build-docker-nginx push-nginx'
    sh 'git tag --contains HEAD | xargs -I % sh -c "tag=% registry=docker-cn.tutormeet.plus make echo build-docker-nginx push-nginx"'
  }  
}
