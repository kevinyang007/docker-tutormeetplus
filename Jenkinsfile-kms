node {
  stage('setup environment') {
    deleteDir()
    env.PYENV_VERSION = "2.7"
    env.PATH = "/usr/local/bin:${env.PATH}"    
    env.DOCKER_NAME = "kms"
  }

  stage('checkout project') {
    checkout scm
  }

  stage('build project') {
    sh 'make build-docker-kms'
    sh 'registry=docker.tutormeet.plus make build-docker-kms'
  }

  stage('squash Image') {
    sh 'make squash-docker-kms'
    sh 'registry=docker.tutormeet.plus make squash-docker-kms'
  }

  stage('push to ecr') {
    sh '$(aws ecr get-login)'
    sh 'make push-kms'
    sh 'registry=docker.tutormeet.plus make push-kms'
  }
}
