node {
    stage 'setup environment'
    deleteDir()
    env.PATH = "/usr/local/bin:${env.PATH}"    

    stage 'checkout project'
    sh '''git clone git@gitlab.tutorabc.com:TutorMeet/tutormeets-dockers.git
          cd tutormeets-dockers
          git clone git@gitlab.tutorabc.com:TutorMeet/TutorMeetS-Socket.IO.git'''

    stage 'build project'
    sh '''cd tutormeets-dockers
          make build-docker-manarola'''

    stage 'push to ecr'
    sh '''`aws ecr get-login`
	      cd tutormeets-dockers
          make push-manarola'''
}
